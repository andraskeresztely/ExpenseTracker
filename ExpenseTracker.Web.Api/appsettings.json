{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "Using": [ "Serilog.Sinks.File" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": ".\\Logs\\ExpenseTracker-.log",
          "rollingInterval": "Day"
        }
      }
    ]
  },

  "Settings": {
    "PersistenceProvider": "Kafka",

    "LiteDbOptions": {
      "DatabasePath": ".\\Db\\MyData.db"
    },

    "KafkaOptions": {
      "BootstrapServers": "ehnstestak.servicebus.windows.net:9093",
      "ClientId": "ExpenseTracker",
      "GroupId": "expensegroup",
      "SaslMechanism": "PLAIN",
      "SaslUsername": "$ConnectionString",
      "SaslPassword": "Endpoint=sb://ehnstestak.servicebus.windows.net/;SharedAccessKeyName=policy;SharedAccessKey=KFdCnU/BFK2/kIOIKV93ZclLLjMy5f1XI+AEhAheLKA=;EntityPath=expenses",
      "SecurityProtocol": "SaslSsl",
      "TimeoutSeconds": 3,
      "Topic": "expenses"
    },

    "WebAppBlazorBaseUrl": "https://localhost:44367"
  }
}
