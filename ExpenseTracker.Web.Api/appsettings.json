{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "Using": [ "Serilog.Sinks.File" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": ".\\Logs\\ExpenseTracker-.log",
          "rollingInterval": "Day"
        }
      }
    ]
  },

  "Settings": {
    "LiteDbOptions": {
      "DatabasePath": ".\\Db\\MyData.db"
    },
    "WebAppBlazorBaseUrl": "https://localhost:44367"
  }
}
