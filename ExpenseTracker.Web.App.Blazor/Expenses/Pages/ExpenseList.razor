@page "/"

<PageTitle>Expense List</PageTitle>

<MudTable Items="@_expenses" Striped="true" Bordered="true" Loading="@_loading" LoadingProgressColor="Color.Info">
    <HeaderContent>
        <MudTh>Date</MudTh>
        <MudTh>Recipient</MudTh>
        <MudTh>Type</MudTh>
        <MudTh>Amount</MudTh>
        <MudTh>Actions</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Transaction date">@context.TransactionDate!.Value.ToString("dd/MM/yyyy")</MudTd>
        <MudTd DataLabel="Recipient">@context.Recipient</MudTd>
        <MudTd DataLabel="Type">@context.Type</MudTd>
        <MudTd DataLabel="Type">@context.SpendingCurrency @context.SpendingAmount</MudTd>
        <MudTd>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@(_ => EditExpense(context.Id))">Edit</MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Secondary" OnClick="@(_ => OpenConfirmDialog(context.Id))">Delete</MudButton>
        </MudTd>
    </RowTemplate>
</MudTable>